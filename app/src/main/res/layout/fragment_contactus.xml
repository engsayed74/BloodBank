<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    tools:context="com.example.sayed.myapplication.Ui.Fragments.ContactusFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_logo"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimens_s"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dimens_xl"
        android:layout_marginTop="@dimen/dimens_s"
        android:layout_marginLeft="@dimen/dimens_xl">
        <EditText
            android:id="@+id/contactus_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/contactus_phone"
            android:layout_weight="0.5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimens_s"
            android:hint="@string/edit_login"
            android:textSize="@dimen/dimens_l"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_black_24dp"
            android:layout_gravity="center"
            android:padding="@dimen/dimens_s"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dimens_xl"
        android:layout_marginTop="@dimen/dimens_s"
        android:layout_marginLeft="@dimen/dimens_xl">
        <EditText
            android:id="@+id/contactus_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/contactus_post"
            android:layout_weight="0.5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimens_s"
            android:hint="@string/creataccount_post"
            android:textSize="@dimen/dimens_l"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
             android:src="@drawable/contactus"
            android:layout_gravity="center"
            android:padding="@dimen/dimens_s"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_marginStart="@dimen/dimens_xl"
        android:layout_marginEnd="@dimen/dimens_xl"
        android:layout_marginTop="@dimen/dimens_s">


        <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/facebook"
            android:layout_weight="1"
        android:layout_gravity="center"
        android:padding="@dimen/dimens_s"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/twitter"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="@dimen/dimens_s"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/youtube"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/dimens_s"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/instagram"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="@dimen/dimens_s"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/whatsapp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/dimens_s"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/googleplus"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="@dimen/dimens_s"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueblack"
        android:textColor="@color/white"
        android:hint="@string/contactus_btn"
        android:textSize="@dimen/dimens_l"
        android:layout_marginTop="@dimen/dimens_s"/>

    <EditText
        android:id="@+id/contactus_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/creataccount_name"
        android:layout_marginTop="@dimen/dimens_s"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background"
        android:padding="@dimen/dimens_s"
        />

    <EditText
        android:id="@+id/contactus_postal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/creataccount_post"
        android:layout_marginTop="@dimen/dimens_s"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background"
        android:padding="@dimen/dimens_s"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_login"
        android:layout_marginTop="@dimen/dimens_s"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background"
        android:padding="@dimen/dimens_s"
        />
    <EditText
        android:id="@+id/contactus_messageaddres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contactus_messagetitle"
        android:layout_marginTop="@dimen/dimens_s"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background"
        android:padding="@dimen/dimens_s"
        />
    <EditText
        android:id="@+id/contactus_messagcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contactus_messagetext"
        android:layout_marginTop="@dimen/dimens_s"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/background"
        android:padding="@dimen/dimens_s"
        />

    <Button
        android:id="@+id/contactus_btnsend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueblack"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/send"
        android:textSize="@dimen/dimens_xl"
        android:layout_marginTop="@dimen/dimens_s"/>


</LinearLayout>
