<RelativeLayout android:layout_width="match_parent"
           android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sayed.myapplication.Ui.Activities.MapsActivity" />


    <Button
        android:id="@+id/map_selectlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dimens_xxl"
        android:layout_marginStart="@dimen/dimens_l"
        android:layout_marginEnd="@dimen/dimens_l"
        android:background="@drawable/background_blueblack"
        android:padding="@dimen/dimens_m"
        android:text="@string/map_selectlocation"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_size_l" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/map_floating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/map_selectlocation"
        android:src="@drawable/ic_location_searching_black_24dp"
        android:layout_margin="@dimen/dimens_l"/>


</RelativeLayout>
